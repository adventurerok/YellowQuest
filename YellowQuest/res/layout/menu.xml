<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="10dp"
    android:background="@drawable/featuregraphic" >

    <TextView
        android:id="@+id/menu_play"
        style="@style/RelFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="end"
        android:text="@string/play" />
    
    <ImageButton
        android:id="@+id/menu_settings"
        style="@style/RelFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="end"
        android:contentDescription="@string/prefs"
        android:src="@drawable/settings" />
    
    <ImageButton
        android:id="@+id/menu_leaderboards"
        style="@style/RelFont"
        android:layout_toLeftOf="@+id/menu_settings"
        android:layout_toStartOf="@+id/menu_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:contentDescription="@string/lbs"
        android:src="@drawable/leaderboard"/>

    <ImageButton
        android:id="@+id/menu_achievements"
        style="@style/RelFont"
        android:layout_toLeftOf="@+id/menu_leaderboards"
        android:layout_toStartOf="@+id/menu_leaderboards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:contentDescription="@string/ach" 
        android:src="@drawable/achievements"/>

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="top|start" />

    <!-- sign-out button -->

    <Button
        android:id="@+id/sign_out_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="top|start"
        android:text="@string/sign_out"
        android:visibility="gone" />

</RelativeLayout>