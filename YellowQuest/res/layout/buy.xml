<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@color/black" >

    <TextView
        android:id="@+id/buy_title"
        style="@style/RelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/buy_more_scorepoints" />

    <TextView
        android:id="@+id/buy_money"
        style="@style/RelSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="start"/>


    <TextView
        android:id="@+id/buy_back"
        style="@style/RelFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/back" />

    <ListView
        android:id="@+id/buy_list"
        style="@style/RelFont"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_above="@+id/buy_back"
        android:layout_below="@+id/buy_title" />

</RelativeLayout>