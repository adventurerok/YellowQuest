<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/power_expanded"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:background="@color/black" >

    <RelativeLayout
        android:id="@+id/power"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_margin="0dp" >

        <Button
            android:id="@+id/power_color"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp" />

        <View
            android:id="@+id/power_space0"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/power_color"
            android:layout_toRightOf="@+id/power_color" />

        <Button
            android:id="@+id/power_upgrade"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/upgrade"
            android:drawableStart="@drawable/upgrade"
            android:text="@string/upgrade" />

        <com.ithinkrok.yellowquest.ui.DisableButton
            android:id="@+id/power_buy"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/power_upgrade"
            android:layout_toStartOf="@+id/power_upgrade"
            android:drawableLeft="@drawable/dollar"
            android:drawableStart="@drawable/dollar"
            android:text="@string/buy" />

        <TextView
            android:id="@+id/power_name"
            style="@style/RelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/power_space0"
            android:layout_toLeftOf="@+id/power_buy"
            android:layout_toRightOf="@+id/power_space0"
            android:layout_toStartOf="@+id/power_buy" />
    </RelativeLayout>

    <TextView
        android:id="@+id/power_info"
        style="@style/RelSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/power" />
    

</RelativeLayout>